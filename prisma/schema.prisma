datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Uses .env file for database connection
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  education   Education[]
}

model Education {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  categoryId  Int
  category    Category   @relation(fields: [categoryId], references: [id])
  boards      Board[]
}

model Board {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  educationId Int
  education   Education  @relation(fields: [educationId], references: [id])
  grades      Grade[]
}

model Grade {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  boardId     Int
  board       Board      @relation(fields: [boardId], references: [id])
  subjects    Subject[]
}

model Subject {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  gradeId     Int
  grade       Grade      @relation(fields: [gradeId], references: [id])
  topics      Topic[]
}

model Topic {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  subjectId   Int
  subject     Subject    @relation(fields: [subjectId], references: [id])
}

model Language {
  language_id   Int    @id @default(autoincrement())
  language_name String @unique
  users         User[] @relation("UserLanguages")
